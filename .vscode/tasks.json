{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "RM2Build",
            "command": "sh",
            "type": "shell",
            "dependsOn": "build",
            "windows": {
                "command": "cmd",
                "args": [
                    "/c",
                    "\"dotnet build --no-self-contained -r linux-arm -c Debug src/ReTerm/ReTerm.csproj\""
                ],
                "problemMatcher": []
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "RM2BuildDeploy",
            "type": "shell",
            "dependsOn": "RM2Build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "windows": {
                "command": "\"Write-Output 'put -r ./src/ReTerm/bin/Debug/net6.0/linux-arm/ /home/root/ReTerm' | sftp root@172.16.1.189\""
            },
            "problemMatcher": []
        }
    ]
}